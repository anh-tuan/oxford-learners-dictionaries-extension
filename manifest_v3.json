{
    "name": "Oxford Learner's Dictionaries Popup",
    "manifest_version": 3,
    "version": "0.1",
    "description": "Fast way to look up a word by popup a tooltip",
    "background": {
        "service_worker": "script/background.js"
    },
    "browser_action": 
    {                                                                   
        "default_icon": 
        {
            "19": "icons/19.png", 
            "38": "icons/38.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "script/content-manager.js",
                "script/content.js",
                "script/request.js",
                "script/tooltip-listener.js",
                "script/tooltip.js",
                "script/dom-scrapper.js",
                "script/inject.js"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages" : "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline';  connect-src https://www.oxfordlearnersdictionaries.com/;"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "style/*.css",
                "img/*"
            ],
            "matches": [ "*://*/*" ]
        }
    ]
}